# ansible/roles/dns/templates/named.conf.j2

options {
    directory "/var/named";
    listen-on port 53 { any; };
    allow-query { any; };
    recursion yes;
};

zone "{{ dns_domain }}" IN {
    type master;
    file "direct.zone";
};

zone "{{ dns_reverse }}" IN {
    type master;
    file "inverse.zone";
};
